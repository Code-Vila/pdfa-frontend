# === MIME TYPES ESSENCIAIS ===
# Forçar MIME types corretos para arquivos JavaScript e CSS
<Files "*.js">
    Header set Content-Type "application/javascript; charset=utf-8"
    ForceType application/javascript
</Files>

<Files "*.css">
    Header set Content-Type "text/css; charset=utf-8"
    ForceType text/css
</Files>

<Files "*.svg">
    Header set Content-Type "image/svg+xml; charset=utf-8"
    ForceType image/svg+xml
</Files>

# Alternativa usando AddType (caso acima não funcione)
AddType application/javascript .js
AddType text/css .css
AddType image/svg+xml .svg

# === CONFIGURAÇÃO SPA ===
Options -MultiViews
RewriteEngine On

# Permitir acesso a arquivos que existem
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Redirecionar tudo para index.html
RewriteRule . /index.html [L]

# === HEADERS DE SEGURANÇA ===
<IfModule mod_headers.c>
    # CORS básico se necessário
    Header set Access-Control-Allow-Origin "*"
    
    # Cache para assets
    <FilesMatch "\.(js|css|svg|ico|png|jpg|jpeg|gif|webp)$">
        Header set Cache-Control "public, max-age=31536000"
    </FilesMatch>
</IfModule>

# === COMPRESSÃO ===
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>
